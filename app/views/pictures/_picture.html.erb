<div class="uk-container uk-margin-remove uk-padding-remove width_250">
  <%= link_to picture_path(picture), class: "uk-link-reset uk-display-block uk-card uk-card-default uk-width-1-1 uk-margin-small-bottom", id: "picture-#{picture.id}" do %>
    <div class="uk-card-media-top uk-flex uk-flex-column">
      <%= image_tag url_for(picture.image.variant(resize_to_limit: [250, 250])) %>
    </div>
    <div class="uk-card-body uk-flex-auto">
      <p class="uk-card-title"><%= picture.title %></p>
      <p class="uk-text-break"><%= picture.memo %></p>
    </div>
  <% end %>
  <div class="uk-flex uk-flex-right uk-margin-medium-bottom uk-width-1-1">
    <p class="uk-align-right uk-padding-small uk-padding-remove-top uk-margin-remove uk-text-small">
      <%= l(picture.shooting_date.to_date) %>
    </p>
    <%= link_to "", picture_path(picture), data: { turbo_method: :patch }, class: "uk-icon-link uk-margin-small-right", "uk-icon" => "file-edit" %>
    <%= link_to "", picture_path(picture), data: { turbo_method: :delete, turbo_confirm: t('helpers.delete_confirm') }, class: "uk-icon-link", "uk-icon" => "trash" %>
  </div>
</div>