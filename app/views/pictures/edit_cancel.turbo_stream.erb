<% if @is_show_page %>
  <%= turbo_stream.replace dom_id(@picture, :edit_show), partial: 'show_card_body', locals: { picture: @picture } %>
<% elsif @is_index_page %>
  <%= turbo_stream.replace @picture, partial: 'picture', locals: { picture: @picture, from: 'index', path: ->(picture) { picture_path(picture) } } %>
<% else %>
  <%= turbo_stream.replace @picture, partial: 'picture', locals: { picture: @picture, from: '', path: ->(picture) { slide_show_picture_path(picture) } } %>
<% end %>